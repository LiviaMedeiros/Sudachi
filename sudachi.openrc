extra_commands="checkconfig"
extra_started_commands="info"

me="sudachi"
py="/usr/bin/python"
fumudir="/home/${me}/discord"
fumupipe="sudachi.pipe"
fumufile="sudachi.py"
conffile="conf.py"
pidfile="/var/run/${RC_SVCNAME}.pid"

depend() {
	use net
}

checkconfig() {
	ebegin "Checking configuration"
	[ -f "${fumudir}/${conffile}" ]
	eend $? "${conffile} not found!"
}

start_pre() {
	[ "${RC_CMD}" = "restart" ] || checkconfig || return $?
	rm -f "${fumudir}/${fumupipe}"
	mkfifo "${fumudir}/${fumupipe}"
	chown "${me}" "${fumudir}/${fumupipe}"
	chmod 600 "${fumudir}/${fumupipe}"
}

stop_pre() {
	[ "${RC_CMD}" != "restart" ] || checkconfig || return $?
}

stop_post() {
	rm -f "${fumudir}/${fumupipe}"
}

info() {
	start-stop-daemon --signal USR1 --pidfile "${pidfile}"
	cat "${fumudir}/${fumupipe}"
}

start() {
	ebegin "Starting Sudachi FM"
	start-stop-daemon --start \
		--chdir "${fumudir}" \
		--user "${me}" \
		--background \
		--make-pidfile \
		--pidfile "${pidfile}" \
		--exec ${py} -- ${fumufile}
	eend $?
}

stop() {
	ebegin "Stopping Sudachi FM"
	start-stop-daemon --stop \
		--chdir "${fumudir}" \
		--user "${me}" \
		--pidfile "${pidfile}"
	eend $?
}
